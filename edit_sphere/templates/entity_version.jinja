{% macro render_triple(triple, subject) %}
    <li class="list-group-item d-flex align-items-center">
        <span class="flex-grow-1 d-flex flex-column justify-content-center p-3 w-75">
            <span class="ellipsis" title="{{triple[1]}}">
                <a class="fw-bold"href="{{ (triple[1] | split_ns)[0][:-1] }}#{{ triple[1] }}" target="_blank" alt="{{_('Definition of the property')}} {{ triple[1] }}">
                    {{ triple[1] | human_readable_predicate }}
                    <i class="bi bi-question-circle ml-1"></i>
                </a>
            </span>
            {% if triple[2] != triple[2] | human_readable_predicate %}
                <span title="{{ triple[2] }}" class="object-value mt-4 ellipsis">
                    <a href="{{ (triple[2] | split_ns)[0][:-1] }}#{{ triple[2] }}" target="_blank" alt="{{_('Definition of the value')}} {{ triple[2] }}">
                        {{ triple[2] | human_readable_predicate }}
                        <i class="bi bi-question-circle ml-1"></i>
                    </a>
                </span>
            {% elif triple[2].startswith('http://') or triple[2].startswith('https://') %}
                <span title="{{ triple[2] }}" class="object-value mt-4 ellipsis">
                    <a href="{{url_for('show_triples', subject=triple[2]|urlencode)}}" alt="{{_('Link to the entity')}} {{ triple[2] }}">{{ triple[2] }}</a>
                </span>
            {% else %}
                <span title="{{ triple[2] }}" class="object-value mt-4 ellipsis">{{ triple[2] }}</span>
            {% endif %}
        </span>
    </li>
{% endmacro %}

{% extends "_base.jinja" %}

{% block content %}
<div class="container">
    {% set first_snapshot_uri = metadata.keys()|first %}
    {% set version_number = first_snapshot_uri.split('/')[-1] %}
    <h2 class="mb-4 ellipsis">{{_('Version')}} {{ version_number }} {{_('of')}} <span title="{{subject | human_readable_predicate}}">{{ subject | human_readable_predicate }}</span></h2>

    <div class="d-flex">
        <div class="me-4">
            <a href="{{ url_for('entity_history', entity_uri=subject) }}" class="btn btn-outline-primary">
                <i class="bi bi-clock-history"></i> {{_('Time machine')}}
            </a>    
        </div>
    
        {% if next_snapshot_timestamp %}
            <form action="{{ url_for('restore_version', entity_uri=subject, timestamp=timestamp) }}" method="post">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-arrow-counterclockwise"></i> {{ _('Restore this version') }}
                </button>
            </form>
        {% endif %}    
    </div>
    
    {% if triples %}

        {# Pulsanti per navigare tra gli snapshot #}
        <div class="mt-5 mb-5 d-flex justify-content-start">

            {% if prev_snapshot_timestamp %}
            <div class="me-4">
                <a href="{{ url_for('entity_version', entity_uri=subject, timestamp=prev_snapshot_timestamp) }}" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> {{ _('Previous version') }}
                </a>
            </div>
            {% else %}
            <div style="visibility: hidden;" class="me-4">
                <a href="#" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> {{ _('Previous version') }}
                </a>
            </div>
            {% endif %}
        
            {% if next_snapshot_timestamp %}
            <div>
                <a href="{{ url_for('entity_version', entity_uri=subject, timestamp=next_snapshot_timestamp) }}" class="btn btn-outline-primary">
                    {{ _('Next version') }} <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            {% endif %}
        </div>

        <div class="row mb-5">
            {% for snapshot_uri, meta in metadata.items() %}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        {{_('Metadata of snapshot')}} {{ snapshot_uri.split('/')[-1] }}
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>{{_('Generation time')}}:</strong> {{ meta['generatedAtTime'] | format_datetime }}</li>
                        {% if meta['invalidatedAtTime'] %}
                            <li class="list-group-item"><strong>{{_('Invalidation time')}}:</strong> {{ meta['invalidatedAtTime'] | format_datetime }}</li>
                        {% endif %}
                        <li class="list-group-item"><strong>{{_('Attributed to')}}:</strong> <a href="{{ meta['wasAttributedTo'] }}" target="_blank">{{ meta['wasAttributedTo'] }}</a></li>
                        <li class="list-group-item"><strong>{{_('Primary source')}}:</strong> {{ meta['hadPrimarySource'] | human_readable_primary_source }}</li>
                        {% if meta['description'] %}
                        <li class="list-group-item"><strong>{{_('Description')}}:</strong> {{ meta['description'] }}</li>
                        {% endif %}
                        {% if modifications %}
                            <li class="list-group-item">
                                <p><strong>{{_('Modifications')}}:</strong></p>
                                {% for mod_type, triples in modifications.items() %}
                                    {% if triples %}
                                        <ul class="list-group mb-3">
                                            <p>{{ mod_type }}</p>
                                            {% for triple in triples %}
                                                {{render_triple(triple, subject)}}
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                {% endfor %}
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>

        {% set attributes_triples = [] %}
        {% set links_triples = [] %}
        {% for triple in triples %}
            {% if triple[2] != triple[2] | human_readable_predicate or not (triple[2].startswith('http://') or triple[2].startswith('https://')) %}
                {% set _ = attributes_triples.append(triple) %}
            {% elif triple[2] == triple[2] | human_readable_predicate and (triple[2].startswith('http://') or triple[2].startswith('https://')) %}
                {% set _ = links_triples.append(triple) %}
            {% endif %}
        {% endfor %}
    
        {% if attributes_triples %}
            <h4 class="mt-5 mb-3">{{_('Attributes')}}</h4>
            <ul class="list-group">
                {% for triple in attributes_triples  %}
                    {{ render_triple(triple, subject) }}
                {% endfor %}
            </ul>
        {% endif %}
        {% if links_triples %}
            <h4 class="mt-5 mb-3">{{_('Links to other resources')}}</h4> 
            <ul class="list-group">
                {% for triple in links_triples %}
                    {{ render_triple(triple, subject) }}
                {% endfor %}
            </ul>
        {% endif %}
    {% else %}
        <p class="alert alert-warning my-5">{{_('This snapshot does not exist')}}</p>
    {% endif %}
</div>
{% endblock %}